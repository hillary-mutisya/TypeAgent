{
    "compilerOptions": {
       "strict": true,
       "module": "esnext",
       "moduleResolution": "Bundler",
       "target": "es2022",
       "esModuleInterop": true,
       "sourceMap": true,
       "rootDir": "src",
       "outDir": "dist/js",
       "noEmitOnError": true,
       "typeRoots": [ "node_modules/@types" ]
    },
    "exclude": ["dist/*.ts", "dist/extension/sites/*.mts","src/agent/*.ts"],
    "references": [
    { "path": "./src" },
    { "path": "./test" }
  ],
  "include": [
   "src/**/*",
   "test/**/*",
   "types/**/*"
 ],
    "ts-node": {
      "esm": true
    }
 }